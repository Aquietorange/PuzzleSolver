{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Vercel Dev",
            "runtimeExecutable": "vercel",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "args": [
                "dev",
                "--debug"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "console": "integratedTerminal",
        }
    ]
}